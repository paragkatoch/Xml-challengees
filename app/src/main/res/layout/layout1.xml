<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#384307">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Action_Bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/Drawer"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_baseline_short_text_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.063"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat"
                android:text="abcd.in"
                android:textColor="#FFF0F0"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.421"
                app:layout_constraintStart_toEndOf="@+id/Drawer"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/Expression"
            android:layout_width="89dp"
            android:layout_height="105dp"
            android:layout_marginTop="35dp"
            android:background="@drawable/fire1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Action_Bar" />

        <TextView
            android:id="@+id/Sign_Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:fontFamily="@font/montserrat"
            android:text="Sign Up and get started"
            android:textColor="#F67F7F"
            android:textSize="18dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Expression" />

        <TextView
            android:id="@+id/Mobile_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="52dp"
            android:layout_marginTop="33dp"
            android:fontFamily="@font/montserrat"
            android:text="Mobile"
            android:textColor="#DCC7F7"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Sign_Up" />

        <EditText
            android:id="@+id/Mobile"
            android:layout_width="315dp"
            android:layout_height="35dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Mobile_text" />

        <TextView
            android:id="@+id/Pwd_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/montserrat"
            android:text="Password:"
            android:textColor="#DCC7F7"
            android:textSize="15dp"
            app:layout_constraintStart_toStartOf="@+id/Mobile_text"
            app:layout_constraintTop_toBottomOf="@+id/Mobile" />

        <EditText
            android:id="@+id/Pwd"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape"
            app:layout_constraintEnd_toEndOf="@+id/Mobile"
            app:layout_constraintStart_toStartOf="@+id/Mobile"
            app:layout_constraintTop_toBottomOf="@+id/Pwd_text" />

        <Button
            android:id="@+id/Letsgo"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/edit_text"
            android:fontFamily="@font/montserrat"
            android:text="Let's Go"
            android:textAllCaps="false"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Pwd" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Links"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Letsgo">


            <ImageView
                android:id="@+id/RightArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="75dp"
                android:background="@drawable/ic_arrow_left"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/Google"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/google"
                app:layout_constraintBottom_toBottomOf="@+id/RightArrow"
                app:layout_constraintStart_toEndOf="@+id/RightArrow"
                app:layout_constraintTop_toTopOf="@+id/RightArrow"
                app:layout_constraintVertical_bias="0.454" />

            <ImageView
                android:id="@+id/Facebook"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/facbook"
                app:layout_constraintBottom_toBottomOf="@+id/Google"
                app:layout_constraintStart_toEndOf="@+id/Google"
                app:layout_constraintTop_toTopOf="@+id/Google"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/LeftArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/ic_arrow_right"
                app:layout_constraintBottom_toBottomOf="@+id/Facebook"
                app:layout_constraintStart_toEndOf="@+id/Facebook"
                app:layout_constraintTop_toTopOf="@+id/Facebook"
                app:layout_constraintVertical_bias="0.454" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/others"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="80dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/Links"
            app:layout_constraintStart_toStartOf="@+id/Links"
            app:layout_constraintTop_toBottomOf="@+id/Links">

            <Button
                android:id="@+id/Already"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="75dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat"
                android:text="Already have an account?"
                android:textAllCaps="false"
                android:textColor="#DCC7F7"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/SignIn"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/montserrat"
                android:text="Sign In"
                android:textAllCaps="false"
                android:textColor="#DCC7F7"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/Already"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>