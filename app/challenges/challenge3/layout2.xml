<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView android:id="@+id/Background" android:layout_width="match_parent"
        android:layout_height="match_parent" android:alpha="0.1"
        android:background="@drawable/sample" />

    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/Front"
        android:layout_width="match_parent" android:layout_height="match_parent" android:alpha="0.4"
        android:background="#384307" />

    <ImageView android:id="@+id/Expression" android:layout_width="89dp"
        android:layout_height="100dp" android:layout_marginTop="85dp"
        android:background="@drawable/fire1" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Background" />

    <androidx.constraintlayout.widget.ConstraintLayout android:id="@+id/Message"
        android:layout_width="200dp" android:layout_height="140dp" android:layout_marginTop="105dp"
        android:background="@drawable/message" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Expression">

        <TextView android:id="@+id/Unsuccessful" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="30dp"
            android:fontFamily="@font/montserrat" android:text="Successfully Signed Up"
            android:textColor="#64F56F" android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.509"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView android:id="@+id/SuccessImage" android:layout_width="75dp"
            android:layout_height="65dp" android:layout_marginTop="9dp"
            android:background="@drawable/group_49"
            app:layout_constraintEnd_toEndOf="@+id/Unsuccessful"
            app:layout_constraintStart_toStartOf="@+id/Unsuccessful"
            app:layout_constraintTop_toBottomOf="@+id/Unsuccessful" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>